<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_11sdp"
        android:background="@color/transparent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"


            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/language_item_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:paddingHorizontal="@dimen/_5sdp"

                android:paddingVertical="@dimen/_10sdp">


                <TextView
                    android:id="@+id/tv_profile_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/almarai_regular"
                    android:text="@string/change_lang"
                    android:textColor="@color/text_color_profile_one"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/diver1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/bg_add_min_item_details_screen_color"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                tools:layout_editor_absoluteX="6dp" />


            <RadioGroup
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="wrap_content">



                <RadioButton
                    android:id="@+id/tv_arabic_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/arabic"
                    android:checked="true"
                    android:paddingVertical="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/almarai_regular"
                    android:button="@drawable/radio_lang_checked_unchecked"
                    android:layout_marginHorizontal="@dimen/_15sdp"

                    />

                <View
                    android:id="@+id/diver5"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@color/bg_add_min_item_details_screen_color"
                    app:layout_constraintTop_toBottomOf="@+id/cardView"
                     />


                <RadioButton
                    android:id="@+id/tv_hebrew_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hebrew"

                    android:textAlignment="textStart"
                    android:paddingVertical="@dimen/_12sdp"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/almarai_regular"
                    android:button="@drawable/radio_lang_checked_unchecked"
                    android:layout_marginHorizontal="@dimen/_15sdp"

                    />



            </RadioGroup>




        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>